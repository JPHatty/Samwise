{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intent Specification",
  "type": "object",
  "required": ["intent", "context", "constraints"],
  "properties": {
    "intent": {
      "type": "string",
      "description": "Human-readable intent description"
    },
    "context": {
      "type": "object",
      "description": "Contextual information for intent execution"
    },
    "constraints": {
      "type": "object",
      "description": "Hard constraints that must be satisfied"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}
